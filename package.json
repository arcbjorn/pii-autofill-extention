{
  "name": "pii-autofill-extension",
  "version": "1.0.0",
  "description": "Chrome extension for PII autofill with intelligent field detection",
  "main": "dev/dev-server.js",
  "scripts": {
    "dev": "node dev/dev-server.js",
    "start": "pnpm run dev",
    "build": "node scripts/build.js",
    "copy-files": "mkdir -p dist && cp -r src/* dist/ && cp manifest.json dist/",
    "clean": "rm -rf dist/*",
    "watch": "pnpm run dev",
    "install": "./scripts/install.sh",
    "optimize": "node scripts/optimize.js",
    "type-check": "tsc --noEmit",
    "compile": "tsc",
    "build-ts": "tsc && node scripts/build.js"
  },
  "keywords": [
    "chrome-extension",
    "autofill",
    "pii",
    "form-detection"
  ],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.5.3",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/chrome": "^0.0.251",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "esbuild": "^0.19.8"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}